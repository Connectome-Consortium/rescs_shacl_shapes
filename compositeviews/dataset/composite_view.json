    }
  ],
  "projections": [
    {
      "@id": "connectome-projection-dataset-01",
      "@type": "ElasticSearchProjection",
      "mapping": {
          "dynamic": false,
          "properties": {
            "@type": {
                "type": "keyword"
            },
            "name": {
                 "type": "text"
            },
            "inLanguage": {
                "type": "text"
            },
            "abstract_en": {
              "type": "text"
            }
        }
      },
      "query": "es_projection_query.rq",
      "context": {
        "@base": "http://schema.org/",
        "@vocab": "http://schema.org/",
        "dateCreated": {
            "@type": "http://www.w3.org/2001/XMLSchema#date"
        },
        "dateModified": {
            "@type": "http://www.w3.org/2001/XMLSchema#date"
        },
        "datePublished": {
            "@type": "http://www.w3.org/2001/XMLSchema#date"
        },
        "genre_en": {
            "@id": "genre",
            "@language": "en"
        },
        "abstract_en": {
          "@id": "abstract",
          "@language": "en"
        },
        "keywords_en": {
          "@id": "keywords",
          "@language": "en"
        },
        "url": {
          "@type": "@id"
        }
      },
      "resourceTypes": [ "http://schema.org/Dataset" ],
      "includeMetadata": false
    }
  ],
  "rebuildStrategy": {
    "@type": "Interval",
    "value": "2 minutes"
  }
