{
  "@context": [
    "https://incf.github.io/neuroshapes/contexts/schema.json",
    {
      "this": "http://rescs.org/dash/person/"
    }
  ],
  "@type": "nxv:Schema",
  "@id": "http://rescs.org/dash/person",
  "imports": [
    "http://rescs.org/dash/thing"
  ],
  "shapes": [
    {
      "@id": "this:PersonShape",
      "@type": "sh:NodeShape",
      "label": "Person",
      "comment": "A person (alive, dead, undead, or fictional).",
      "targetClass": "schema:Person",
      "and": [
        {
          "node": "http://rescs.org/dash/thing/ThingShape"
        },
        {
          "property": [
            {
              "path": "schema:additionalName",
              "name": "additionalName",
              "description": "An additional name for a Person, can be used for a middle name.",
              "datatype": "xsd:string"
            },
            {
              "path": "schema:address",
              "name": "address",
              "description": "Physical address of the item.",
              "datatype": "xsd:string",
              "maxCount": 1
            },
            {
              "path": "schema:affiliation",
              "name": "affiliation",
              "description": "An organization that this person is affiliated with. For example, a school/university, a club, or a team.",
              "class": "schema:Organization",
              "nodeKind": "sh:IRI",
              "minCount": 1
            },
            {
              "path": "schema:birthDate",
              "name": "birthDate",
              "description": "Date of birth.",
              "datatype": "xsd:date",
              "maxCount": 1,
              "lessThan": "schema:deathDate"
            },
            {
              "path": "schema:deathDate",
              "name": "deathDate",
              "description": "Date of death.",
              "datatype": "xsd:date",
              "maxCount": 1
            },
            {
              "path": "schema:email",
              "name": "email",
              "description": "Email address.",
              "datatype": "xsd:string",
              "pattern": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$",
              "maxCount": 1
            },
            {
              "path": "schema:familyName",
              "name": "familyName",
              "description": "Family name. In the U.S., the last name of a Person.",
              "datatype": "xsd:string",
              "minCount": 1,
              "maxCount": 1
            },
            {
              "path": "schema:givenName",
              "name": "givenName",
              "description": "Given name. In the U.S., the first name of a Person.",
              "datatype": "xsd:string",
              "minCount": 1,
              "maxCount": 1
            },
            {
              "path": "schema:honorificPrefix",
              "name": "honorificPrefix",
              "description": "An honorific prefix preceding a Person's name such as Dr/Mrs/Mr.",
              "datatype": "xsd:string",
              "maxCount": 1
            },
            {
              "path": "schema:honorificSuffix",
              "name": "honorificSuffix",
              "description": "An honorific suffix following a Person's name such as M.D. /PhD/MSCSW.",
              "datatype": "xsd:string",
              "maxCount": 1
            },
            {
              "path": "schema:jobTitle",
              "name": "jobTitle",
              "description": "The job title of the person (for example, Financial Manager).",
              "datatype": "xsd:string",
              "minCount": 1
            }
          ]
        }
      ]
    }
  ]
}